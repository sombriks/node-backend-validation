{
  "name": "01-address-book-no-validate",
  "type": "module",
  "version": "1.0.0",
  "description": "This project demonstrates why we should validate user input.",
  "main": "index.js",
  "scripts": {
    "lint": "xo --fix app",
    "start": "node -r dotenv-flow/config index.js",
    "test": "cross-env NODE_ENV=test ava app",
    "test:coverage": "cross-env NODE_ENV=test c8 ava app",
    "dev": "cross-env NODE_ENV=development nodemon -r dotenv-flow/config"
  },
  "keywords": [
    "koa",
    "pglite",
    "ava",
    "supertest"
  ],
  "author": "Leonardo Silveira <sombriks@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@electric-sql/pglite": "^0.1.5",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "koa": "^2.15.3",
    "koa-api-builder": "^0.2.4",
    "koa-bodyparser": "^4.4.1",
    "koa-jwt": "^4.0.4"
  },
  "devDependencies": {
    "ava": "^6.1.3",
    "c8": "^10.1.2",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "xo": "^0.58.0"
  },
  "engines": {
    "node": ">=20"
  },
  "ava": {
    "verbose": true,
    "require": [
      "dotenv-flow/config"
    ]
  },
  "c8": {
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "xo": {
    "rules": {
      "eqeqeq": "warn",
      "new-cap": "warn",
      "camelcase": "warn",
      "no-return-assign": "warn",
      "ava/no-skip-test": "warn",
      "no-await-in-loop": "warn",
      "no-warning-comments": "warn",
      "n/prefer-global/process": "warn",
      "unicorn/prefer-top-level-await": "warn"
    }
  }
}