{
  "name": "04-address-book-ts-node",
  "version": "1.0.0",
  "description": "This example intends to use static type checking on top of everything else already seen so far about validation.",
  "engines": {
    "node": ">=20"
  },
  "main": "index.js",
  "scripts": {
    "lint": "xo --fix app",
    "start": "ts-node -r dotenv-flow/config index.ts",
    "test": "cross-env NODE_ENV=test ava app",
    "test:coverage": "cross-env NODE_ENV=test c8 ava app",
    "dev": "cross-env NODE_ENV=development nodemon -x ts-node -e ts -r dotenv-flow/config index.ts"
  },
  "keywords": [
    "koa",
    "pglite",
    "ava",
    "supertest",
    "validation",
    "typescript",
    "ts-node"
  ],
  "author": "Leonardo Silveira <sombriks@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@electric-sql/pglite": "^0.1.5",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "@types/koa": "^2.15.0",
    "@types/koa-cors": "^0.0.6",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-router": "^7.4.8",
    "@types/signale": "^1.4.7",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "koa": "^2.15.3",
    "koa-api-builder": "^0.2.4",
    "koa-bodyparser": "^4.4.1",
    "koa-jwt": "^4.0.4",
    "signale": "^1.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.2",
    "ava": "^6.1.3",
    "c8": "^10.1.2",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "xo": "^0.58.0"
  },
  "ava": {
    "verbose": true,
    "extensions": [
      "ts"
    ],
    "require": [
      "dotenv-flow/config",
      "ts-node/register"
    ]
  },
  "c8": {
    "exclude": [
      "**/*.spec.ts"
    ]
  },
  "xo": {
    "rules": {
      "radix": "warn",
      "eqeqeq": "warn",
      "new-cap": "warn",
      "camelcase": "off",
      "no-return-assign": "off",
      "ava/no-skip-test": "warn",
      "no-await-in-loop": "warn",
      "import/extensions": "off",
      "no-warning-comments": "warn",
      "n/prefer-global/process": "off",
      "unicorn/prefer-top-level-await": "warn",
      "@typescript-eslint/member-ordering": "warn",
      "@typescript-eslint/restrict-template-expressions": "warn"
    }
  }
}